# ToM-NAS Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# Environment
# =============================================================================
TOM_NAS_ENV=development  # development, staging, production
TOM_NAS_DEBUG=true
TOM_NAS_LOG_LEVEL=DEBUG  # DEBUG, INFO, WARNING, ERROR

# =============================================================================
# Google Cloud Platform
# =============================================================================
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# Model Configuration
# =============================================================================
TOM_NAS_DEVICE=cpu  # cpu, cuda
TOM_NAS_INPUT_DIMS=191
TOM_NAS_OUTPUT_DIMS=181
TOM_NAS_HIDDEN_DIMS=128

# =============================================================================
# Evolution / NAS
# =============================================================================
TOM_NAS_POPULATION_SIZE=20
TOM_NAS_GENERATIONS=100

# =============================================================================
# Training
# =============================================================================
TOM_NAS_BATCH_SIZE=32
TOM_NAS_LEARNING_RATE=0.001

# =============================================================================
# Paths
# =============================================================================
TOM_NAS_CHECKPOINT_DIR=checkpoints
TOM_NAS_RESULTS_DIR=results
TOM_NAS_LOGS_DIR=logs

# =============================================================================
# Server
# =============================================================================
API_PORT=8080
STREAMLIT_PORT=8501

# =============================================================================
# Godot Bridge (optional)
# =============================================================================
GODOT_HOST=localhost
GODOT_PORT=9080

# =============================================================================
# Monitoring
# =============================================================================
ENABLE_CLOUD_LOGGING=false
ENABLE_METRICS=true
ENABLE_TRACING=false
